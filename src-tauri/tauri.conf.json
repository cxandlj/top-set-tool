{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "top-set-tool",
  "version": "0.0.1",
  "identifier": "com.top-set-tool.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "label":"main",
        "title": "窗口置顶工具",
        "width": 300,
        "height": 300,
        "visible": false,
        "alwaysOnTop": true,
        "decorations": false,
        "transparent": true,
        "resizable": false,
        "maximizable": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "createUpdaterArtifacts": true
  },
  "plugins": {
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDQ4RDI2Q0I5OEY3M0I0QUIKUldTcnRIT1B1V3pTU0NaT0V5ZkU0a016eXRSUnJXZk96M0lBT0JJQjdUTnZDR0JTQTdBN20waGgK",
      "endpoints": [
        "https://cxandlj.github.io/top-set-tool/latest.json"
      ]
    }
  }
}